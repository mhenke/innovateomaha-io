<!-- Begin Article -->
<div class="row">
  <section>
    <%= render partial: 'monologue/posts/post_header', locals: {post: post} %>

    <div class="twelve columns">
      <div class="article_content">
        <%= truncate_html(post.content, length: 375, omission: '') %>
      </div>
      <!-- 
        <div class="tags" data-monologue="tags">
          <%= render post.tags %>
        </div>
       -->
      <%= link_to t("Continue reading"), post.full_url, class: "button small icon-chevron-right" %>
    </div>
</div>

<!-- End  Article -->
<hr class="article_hr"/>