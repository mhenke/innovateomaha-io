    = render :partial => 'shared/login'
  / Included JS Files (Compressed)
  = javascript_include_tag "application"
  / Countdown
  = javascript_include_tag "jquery.countdown.js"
  :javascript
    $(function() {
      $('div#clock').countdown("2013/11/10", function(event) {
        var $this = $(this);
        switch(event.type) {
          case "seconds":
          case "minutes":
          case "hours":
          case "days":
          case "weeks":
          case "daysLeft":
            $this.find('span#'+event.type).html(event.value);
            break;
          case "finished":
            $this.hide();
            break;
          }
        });
      });